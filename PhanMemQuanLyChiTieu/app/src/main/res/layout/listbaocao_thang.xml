<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editText_nhapthang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10">

        <requestFocus />
    </EditText>

    <ImageButton
        android:id="@+id/imageButton_chonthang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/editText_nhapthang"
        android:background="@drawable/date" />

    <ImageButton
        android:id="@+id/imageButton_baocaothang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_nhapthang"
        android:background="@drawable/ok_small" />

    <ImageView
        android:id="@+id/division"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageButton_baocaothang"
        android:background="@drawable/division" />

    <ListView
        android:id="@+id/listView_baocaothang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/division" />

</RelativeLayout>